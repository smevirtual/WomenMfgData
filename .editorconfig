root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
charset = utf-8
max_line_length = 120

[*.py]
indent_size = 4

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.xml]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.sh]
indent_size = 4

[*.html]
indent_size = 2

[*.svg]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[Jenkinsfile]
indent_size = 4

[*.groovy]
indent_size = 4

[package.json]
indent_size = 2

[Makefile]
indent_style = tab

[.eslintrc]
indent_size = 2
